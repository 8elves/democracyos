#content-404
  position: absolute
  background-color: #f18f01
  width: 100%
  min-height: 100%

  .container-404
    width: 430px
    margin: 0 auto
    padding-top: 160px
    overflow: hidden

    img
      max-width: 400px
      margin: 0 auto
      display: block

    .note
      text-align: center
      font-size: 80px
      color: #006E90

    h1
      text-align: center
      color: #006E90
      margin: 0 auto

    .goback
      text-align: center
      margin-top: 20px
      color: #000

body.not-found-page
  .app-header
    .profile
      display: none

@media only screen and (max-width: 700px)
  #content-404
    .container-404
      width: 90% !important
      padding-top: 15% !important