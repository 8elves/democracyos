.signin-container.inner-container.small-container
  #signin-form
    div
      img(src='/boot/otter.png')
    div
      img(src='/boot/oddvoter-name.png')
    //- .title-page
    //-   .circle
    //-     i.icon-signin
    //-   h1= t('signin.login')

    form.form(action="/signin", method="post", role="form", autovalidate='autovalidate', autosubmit='autosubmit')
      ul.form-errors
      .form-group
        input.form-control(type='text', name='email', tabindex=1, placeholder=t('forgot.mail.example'), validate='required email')
      .form-group
        .forgot: a(href='/forgot', tabindex=4) #{t('forgot.question')}

        input.form-control(type='password', name='password', tabindex=2, placeholder=t('password'), validate='required')
      .form-group: button.btn.btn-block.btn-primary.btn-lg.login-button(tabindex=3)=t('signin.login')
      div.or or
      .form-group: button.btn.btn-block.btn-primary.btn-lg.create-account-button(href='/signup', tabindex=5)=t('signin.action.signup')
